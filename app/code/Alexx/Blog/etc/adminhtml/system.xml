<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog_blog" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <class>separator-top</class>
            <label>Blog</label>
            <tab>catalog</tab>
            <resource>Alexx_Blog::config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Blog settings</label>
                <field id="enable" translate="label comment" type="select" sortOrder="0" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable blog</comment>
                </field>
                <field id="applied_to" translate="label comment" type="multiselect" sortOrder="1" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Blog applied to</label>
                    <source_model>Magento\Catalog\Model\Product\Type</source_model>
                    <comment>Select product type on which will display blog</comment>
                </field>
            </group>
        </section>
    </system>
</config>
